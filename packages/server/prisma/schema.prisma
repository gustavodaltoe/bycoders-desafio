generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StoreOwner {
  cpf   String  @id
  name  String
  Store Store[]

  @@map("store_owners")
}

model Store {
  id       String     @id
  name     String
  balance  BigInt     @default(0)
  owner    StoreOwner @relation(fields: [ownerCpf], references: [cpf])
  ownerCpf String     @map("owner_id")

  @@map("stores")
}
