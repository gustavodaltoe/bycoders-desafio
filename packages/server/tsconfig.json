{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "module": "commonjs",
    "target": "es2017",
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@infra/*": ["./src/infra/*"],
      "@core/*": ["./src/core/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": ["src"],
}
