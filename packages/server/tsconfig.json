{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "removeComments": true,
    "module": "commonjs",
    "target": "es2017",
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@infra/*": ["infra/*"],
      "@core/*": ["core/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src"]
}
